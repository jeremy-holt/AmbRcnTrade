{
  "compileOnSave": false,
  "compilerOptions": {
    "declaration": false,
    "typeRoots": [
      "./node_modules/@types"
    ],
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "target": "es6",
    "lib": [
      "es2020",
      "dom"      
    ],
    "moduleResolution": "node",
    "baseUrl": "src",    
    "resolveJsonModule": true,
    "allowJs": true,
    "esModuleInterop": true,
    "importHelpers": true,
    "forceConsistentCasingInFileNames": true,

    "skipLibCheck": true,
    "strict": false
  },
  "include": [
    "src",
    "test"
  ],
  "atom": {
    "rewriteTsconfig": false
  }
}
